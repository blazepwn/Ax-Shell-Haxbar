#!/usr/bin/env bash

# Usage: settarget IP [NAME...]

set -e

TARGET_DIR="${HOME}/.config/Ax-Shell/scripts"
TARGET_FILE="${TARGET_DIR}/target"

if [ $# -lt 1 ]; then
  echo "Usage: settarget IP [NAME...]" >&2
  exit 1
fi

ip="$1"
shift

mkdir -p "${TARGET_DIR}"

if [ $# -eq 0 ]; then
  echo "${ip}" > "${TARGET_FILE}"
else
  echo "${ip} $*" > "${TARGET_FILE}"
fi
